            <Grid>
                <Image Width="23" Height="25" Source="../Resources/images/music.png" Margin="10,2,182,3"/>
                <Label Margin="48,0,0,0" Padding="0,9" FontWeight="Bold">一生所爱</Label>
            </Grid>
